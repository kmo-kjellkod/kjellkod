<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewHousePropertySweeper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/house_property_sweep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextHousePropertySweeper"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteIvory2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/dimension_h1"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/textViewHousePropertySweeper"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewHousePropertyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/house_property_id"
        app:layout_constraintTop_toBottomOf="@+id/editTextHousePropertySweeper"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/editTextHousePropertyId"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteIvory2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/dimension_h1"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/textViewHousePropertyId"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>